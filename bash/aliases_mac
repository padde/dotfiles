# listings (overwrites standard ls aliases)
if command_exists gls; then
    alias ls='gls --color=auto -F'
    alias ll='gls -lhAF --color=auto'
else
    alias ls='ls -Gh'
    alias ll='ls -GlAh'
fi

# use mactrash for deleting files
source ~/.dotfiles/mactrash/trash

if [ ! LOGGED_IN_VIA_SSH ]; then
    # textmate
    function mate_arg {
    	if test -z "$1"
    	then
    	  mate .
    	else
    	  mate $1
    	fi
    }
    alias m='mate_arg'
fi
