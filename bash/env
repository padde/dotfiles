# search for binaries in user directory first
export PATH=~/bin:$PATH

# node package manager (npm)
export NODE_PATH="/usr/local/lib/node"
export PATH=/usr/local/share/npm/bin:$PATH

# operating system string
OS=`uname`

# pager
if [ `type -P most` ]; then
	export PAGER=most
fi

# editor
export EDITOR=vim

# RVM - Ruby Version Manager
if [[ -s /Users/padde/.rvm/scripts/rvm ]]; then
	source /Users/padde/.rvm/scripts/rvm
fi

# logged in via ssh?
export LOGGED_IN_VIA_SSH=false
if [[ $(who am i) =~ \([a-z0-9\.]+\)$ ]]; then
    LOGGED_IN_VIA_SSH=true
fi