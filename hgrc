[extdiff]
cmd.opendiff = opendiff

[alias]
giveup = !$HG up --clean; $HG revert --all --no-backup; $HG purge
recent = glog -l5
rct = recent
brecent = glog -l5 -b.
brct = brecent
hash = parents --template="{node|short}"
pu = pull -u
rel = resolve -l
rem = resolve -m
whereami = glog --rev "last(0 or parents()~2)::last(tip or limit(children(children(parents()))))"
