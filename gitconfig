[user]
  name = Patrick Oscity
  email = patrick.oscity@gmail.com

[github]
  user = padde

[color]
  branch = auto
  diff = auto
  status = auto

[color "diff"]
  meta = blue
  frag = blue
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = blue

[alias]
  au = add -u
  st = status
  ci = commit
  cm = commit -m
  cam = commit -am
  br = branch
  co = checkout
  df = diff
  dfs = diff --staged
  lgp = log --pretty='tformat:%C(blue)%h%C(red)%d%C(yellow) %s %C(green)%an%Creset, %ar'
  lgg = log --pretty='tformat:%C(blue)%h%C(red)%d%C(yellow) %s %C(green)%an%Creset, %ar' --graph
  l =   log --pretty='tformat:%C(blue)%h%C(red)%d%C(yellow) %s %C(green)%an%Creset, %ar' --graph -n10
  trim = "!if [[ -z $(git branch --merged | grep -v '\\*' ]]; then echo 'no merged branches to delete'; else (git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d); fi"

[core]
  excludesfile = ~/.gitignore
  quotepath = false

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true

[push]
  default = current

[help]
  autocorrect = 5

[include]
  path = ~/.gitconfig.local
