[github]
  user = padde

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  au = add -u
  st = status
  ci = commit
  cm = commit -m
  cam = commit -am
  br = branch
  co = checkout
  df = diff
  dfs = diff --staged
  lg = log
  lgv = log -p
  lgp = log --pretty=oneline --abbrev-commit
  lgg = log --graph --pretty=oneline --abbrev-commit

[core]
  excludesfile = ~/.gitignore
  quotepath = false
  pager = cat

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true

[push]
	default = current

[help]
  autocorrect = 5
