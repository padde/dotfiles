[user]
  name = Patrick Oscity
  email = patrick.oscity@gmail.com

[github]
  user = padde

[color]
  branch = auto
  diff = auto
  status = auto

[color "diff"]
  meta = blue
  frag = blue
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = blue

[alias]
  au = add -u
  st = status
  ci = commit
  cm = commit -m
  cam = commit -am
  br = branch
  co = checkout
  df = diff
  dfs = diff --staged
  last = show HEAD~1..HEAD
  lgp = log --pretty='%C(blue)%h %C(green)%aN %C(yellow)%s%C(red)%d %C(blue)%ar%Creset' --graph
  lgg = log --pretty='%C(blue)%h %C(green)%aN %C(yellow)%s%C(red)%d %C(blue)%ar%Creset' --graph --first-parent
  l =   log --pretty='%C(blue)%h %C(green)%aN %C(yellow)%s%C(red)%d %C(blue)%ar%Creset' --graph --first-parent -n10
  obsolete = "!git branch --merged | grep -v '\\*\\|master'"
  trim = "!if [[ -z $(git obsolete) ]]; then echo 'no merged branches to delete'; else (git obsolete | xargs git branch -d); fi"
  giveup = "!printf 'Do you really want to discard all staged, unstaged and untracked changes? [Yn] '; read yn; if [[ $yn =~ "^[yY]([eE][sS])?$" ]]; then (git reset && git co . && git clean -f); else echo 'aborted'; fi"

[core]
  excludesfile = ~/.gitignore
  quotepath = false
  pager = cat

[push]
  default = current

[help]
  autocorrect = 20

[include]
  path = ~/.gitconfig.local
[mailmap]
	file = /Users/patrickoscity/.mailmap
